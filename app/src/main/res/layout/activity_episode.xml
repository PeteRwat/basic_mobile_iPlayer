<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EpisodeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/epImage"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/epMasterBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/epImage"
            android:layout_marginLeft="10dp"
            android:text="Master Brand"
            android:layout_marginTop="20dp"
            android:textColor="#808080"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/epTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/epMasterBrand"
            android:layout_alignLeft="@id/epMasterBrand"
            android:text="Title"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/epDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/epTitle"
            android:layout_alignLeft="@id/epMasterBrand"
            android:text="Details"
            android:textSize="15dp"
            android:textColor="#808080"/>

        <TextView
            android:id="@+id/epSynopses"
            android:layout_alignLeft="@id/epMasterBrand"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/epDetails"
            android:text="This is a synopses"
            android:textSize="15dp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/epDuration"
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/epSynopses"
                android:text="90 mins"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="#808080"/>

            <TextView
                android:id="@+id/epFirstShown"
                android:layout_alignLeft="@id/epMasterBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/epDuration"
                android:text="First shown"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="#808080"/>

            <TextView
                android:id="@+id/epAvailability"
                android:layout_alignLeft="@id/epMasterBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/epFirstShown"
                android:text="2 days left to watch"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:textColor="#808080"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>