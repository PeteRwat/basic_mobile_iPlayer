<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">
        
        <ImageView
            android:id="@+id/eleImage"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_marginRight="6dp"/>
        <TextView
            android:id="@+id/eleMasterBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/eleImage"
            android:text="Master Brand"
            android:textColor="#808080"
            android:textSize="15dp"
             />
        <TextView
            android:id="@+id/eleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eleMasterBrand"
            android:layout_toRightOf="@id/eleImage"
            android:text="Title"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/eleDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eleTitle"
            android:layout_toRightOf="@id/eleImage"
            android:text="Details"
            android:textSize="15dp"
            android:layout_marginLeft="4dp"
            android:textColor="#808080"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>